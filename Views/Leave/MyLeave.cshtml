@model IEnumerable<HRManagementSystem.Models.LeaveApplication>

@{
    ViewData["Title"] = "My Leave";
    var employee = ViewBag.Employee as HRManagementSystem.Models.Employee;
    var leaveBalances = ViewBag.LeaveBalances as List<HRManagementSystem.Models.LeaveBalance> ?? new List<HRManagementSystem.Models.LeaveBalance>();
    var currentYear = ViewBag.CurrentYear;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-check"></i> My Leave</h2>
    <a asp-action="Apply" class="btn btn-primary">
        <i class="fas fa-calendar-plus"></i> Apply for Leave
    </a>
</div>

<!-- Leave Balances Card -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Leave Balance for @currentYear</h5>
    </div>
    <div class="card-body">
        @if (leaveBalances.Any())
        {
            <div class="row">
                @foreach (var balance in leaveBalances)
                {
                    <div class="col-md-4 col-lg-3 mb-3">
                        <div class="card h-100 @balance.LeaveType.Color">
                            <div class="card-body text-white">
                                <h6 class="card-title">@balance.LeaveType.Name</h6>
                                <div class="mb-2">
                                    <i class="fas fa-calendar"></i>
                                    <strong>Total:</strong> @balance.TotalDays days
                                </div>
                                <div class="mb-2">
                                    <i class="fas fa-check-circle"></i>
                                    <strong>Used:</strong> @balance.UsedDays days
                                </div>
                                <div class="mb-2">
                                    <i class="fas fa-clock"></i>
                                    <strong>Pending:</strong> @balance.PendingDays days
                                </div>
                                <hr class="bg-white">
                                <div>
                                    <i class="fas fa-hourglass-half"></i>
                                    <strong>Available:</strong> <span class="h5">@balance.AvailableDays days</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                No leave balances initialized yet. Your balances will be created when you apply for leave.
            </div>
        }
    </div>
</div>

<!-- Leave Applications Card -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-list"></i> My Leave Applications</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Leave Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Days</th>
                            <th>Applied Date</th>
                            <th>Status</th>
                            <th>Reviewed By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var application in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge @application.LeaveType.Color">
                                        @application.LeaveType.Name
                                    </span>
                                </td>
                                <td>@application.StartDate.ToString("dd MMM yyyy")</td>
                                <td>@application.EndDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <strong>@application.TotalDays</strong> days
                                </td>
                                <td>@application.AppliedDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="badge @application.StatusBadgeClass">
                                        <i class="fas @application.StatusIcon"></i>
                                        @application.Status
                                    </span>
                                </td>
                                <td>
                                    @if (application.ReviewedBy != null)
                                    {
                                        <small>
                                            @application.ReviewedBy.FullName
                                            <br>
                                            <span class="text-muted">@application.ReviewedDate?.ToString("dd MMM yyyy")</span>
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@application.LeaveApplicationId" class="btn btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (application.CanBeCancelled)
                                        {
                                            <form asp-action="Cancel" asp-route-id="@application.LeaveApplicationId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to cancel this leave application?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-warning" title="Cancel">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                You haven't applied for any leave yet. Click "Apply for Leave" to submit your first application.
            </div>
        }
    </div>
</div>

<style>
    .fas {
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
    }
</style>
