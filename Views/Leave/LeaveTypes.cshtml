@model IEnumerable<HRManagementSystem.Models.LeaveType>

@{
    ViewData["Title"] = "Leave Types Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list"></i> Leave Types Management</h2>
    <div class="d-flex gap-2">
        <a asp-action="HRDashboard" class="btn btn-outline-primary">
            <i class="fas fa-chart-line"></i> Dashboard
        </a>
        <a asp-action="CreateLeaveType" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Leave Type
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@Model.Count()</h3>
                        <p class="mb-0">Total Types</p>
                    </div>
                    <div>
                        <i class="fas fa-list fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@Model.Count(lt => lt.IsActive)</h3>
                        <p class="mb-0">Active</p>
                    </div>
                    <div>
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@Model.Count(lt => lt.IsPaid)</h3>
                        <p class="mb-0">Paid Types</p>
                    </div>
                    <div>
                        <i class="fas fa-money-bill-wave fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@Model.Count(lt => lt.RequiresApproval)</h3>
                        <p class="mb-0">Approval Required</p>
                    </div>
                    <div>
                        <i class="fas fa-user-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Leave Types Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-table"></i> All Leave Types</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Days/Year</th>
                            <th>Type</th>
                            <th>Approval</th>
                            <th>Status</th>
                            <th>Color</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var leaveType in Model.OrderBy(lt => lt.Name))
                        {
                            <tr class="@(!leaveType.IsActive ? "table-secondary" : "")">
                                <td>
                                    <strong class="@(!leaveType.IsActive ? "text-muted" : "")">
                                        @leaveType.Name
                                    </strong>
                                    @if (!leaveType.IsActive)
                                    {
                                        <br><small class="badge bg-secondary">Inactive</small>
                                    }
                                </td>
                                <td>
                                    <div style="max-width: 250px;">
                                        <span class="@(!leaveType.IsActive ? "text-muted" : "")" title="@leaveType.Description">
                                            @(string.IsNullOrEmpty(leaveType.Description) ? "-" : 
                                              leaveType.Description.Length > 50 ? 
                                              leaveType.Description.Substring(0, 50) + "..." : 
                                              leaveType.Description)
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(leaveType.IsActive ? "bg-info" : "bg-secondary")">
                                        @leaveType.DefaultDaysPerYear days
                                    </span>
                                </td>
                                <td>
                                    @if (leaveType.IsPaid)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-money-bill-wave"></i> Paid
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-hand-holding"></i> Unpaid
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (leaveType.RequiresApproval)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-user-check"></i> Required
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user-times"></i> Auto
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (leaveType.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @leaveType.Color text-white px-3 py-2">
                                        @leaveType.Color?.Replace("bg-", "").ToUpper()
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditLeaveType" asp-route-id="@leaveType.LeaveTypeId" 
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        @if (leaveType.IsActive)
                                        {
                                            <button type="button" class="btn btn-outline-warning" 
                                                    onclick="toggleStatus(@leaveType.LeaveTypeId, '@leaveType.Name', false)"
                                                    title="Deactivate">
                                                <i class="fas fa-pause"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-success" 
                                                    onclick="toggleStatus(@leaveType.LeaveTypeId, '@leaveType.Name', true)"
                                                    title="Activate">
                                                <i class="fas fa-play"></i>
                                            </button>
                                        }
                                        
                                        <button type="button" class="btn btn-outline-info" 
                                                onclick="showDetailsModal(@leaveType.LeaveTypeId)"
                                                title="View Details">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-list fa-3x text-muted mb-3"></i>
                <h4>No Leave Types</h4>
                <p class="text-muted mb-3">No leave types have been configured yet.</p>
                <a asp-action="CreateLeaveType" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create First Leave Type
                </a>
            </div>
        }
    </div>
</div>

<!-- Leave Type Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">
                    <i class="fas fa-info-circle"></i> Leave Type Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Close
                </button>
                <button type="button" class="btn btn-primary" id="editFromModal">
                    <i class="fas fa-edit"></i> Edit
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Leave types data for modal
    const leaveTypes = @Html.Raw(Json.Serialize(Model.Select(lt => new {
        lt.LeaveTypeId,
        lt.Name,
        lt.Description,
        lt.DefaultDaysPerYear,
        lt.RequiresApproval,
        lt.IsPaid,
        lt.IsActive,
        lt.Color
    })));

    function showDetailsModal(leaveTypeId) {
        const leaveType = leaveTypes.find(lt => lt.leaveTypeId === leaveTypeId);
        if (!leaveType) return;

        const modalBody = document.getElementById('modalBody');
        const editBtn = document.getElementById('editFromModal');
        
        editBtn.onclick = function() {
            window.location.href = `/Leave/EditLeaveType/${leaveTypeId}`;
        };

        modalBody.innerHTML = `
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Name</label>
                        <div class="form-control-plaintext">${leaveType.name}</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Default Days Per Year</label>
                        <div class="form-control-plaintext">
                            <span class="badge bg-info">${leaveType.defaultDaysPerYear} days</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Approval Required</label>
                        <div class="form-control-plaintext">
                            ${leaveType.requiresApproval ? 
                                '<span class="badge bg-primary"><i class="fas fa-check"></i> Yes</span>' : 
                                '<span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>'}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Type</label>
                        <div class="form-control-plaintext">
                            ${leaveType.isPaid ? 
                                '<span class="badge bg-success"><i class="fas fa-money-bill-wave"></i> Paid</span>' : 
                                '<span class="badge bg-warning text-dark"><i class="fas fa-hand-holding"></i> Unpaid</span>'}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Status</label>
                        <div class="form-control-plaintext">
                            ${leaveType.isActive ? 
                                '<span class="badge bg-success"><i class="fas fa-check-circle"></i> Active</span>' : 
                                '<span class="badge bg-danger"><i class="fas fa-times-circle"></i> Inactive</span>'}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">UI Color</label>
                        <div class="form-control-plaintext">
                            <span class="badge ${leaveType.color} text-white px-3 py-2">${leaveType.color}</span>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <div class="form-control-plaintext">
                            ${leaveType.description || '<em class="text-muted">No description provided</em>'}
                        </div>
                    </div>
                </div>
            </div>
        `;

        const modal = new bootstrap.Modal(document.getElementById('detailsModal'));
        modal.show();
    }

    function toggleStatus(leaveTypeId, name, activate) {
        const action = activate ? 'activate' : 'deactivate';
        const message = `Are you sure you want to ${action} the leave type "${name}"?`;
        
        if (confirm(message)) {
            // This would typically make an AJAX call to toggle the status
            alert(`This functionality would ${action} the leave type. Implementation needed in controller.`);
            // Example AJAX call:
            // fetch(`/Leave/ToggleLeaveType/${leaveTypeId}`, { method: 'POST', ... })
        }
    }
</script>

<style>
    .fas {
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .table-secondary td {
        opacity: 0.6;
    }
    
    .btn-group .btn {
        border-radius: 0.25rem;
        margin-right: 2px;
    }
    
    .card-body .row .card {
        transition: transform 0.2s;
    }
    
    .card-body .row .card:hover {
        transform: translateY(-2px);
    }
</style>