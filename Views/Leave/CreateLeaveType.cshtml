@model HRManagementSystem.Models.LeaveType

@{
    ViewData["Title"] = "Create Leave Type";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-plus"></i> Create New Leave Type</h2>
    <a asp-action="LeaveTypes" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Leave Types
    </a>
</div>

<!-- Form Card -->
<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-edit"></i> Leave Type Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="CreateLeaveType" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag"></i> Leave Type Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="e.g., Annual Leave, Sick Leave" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="form-text">Choose a clear, descriptive name for this leave type.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DefaultDaysPerYear" class="form-label">
                            <i class="fas fa-calendar-day"></i> Default Days Per Year <span class="text-danger">*</span>
                        </label>
                        <input asp-for="DefaultDaysPerYear" type="number" class="form-control" min="0" max="365" />
                        <span asp-validation-for="DefaultDaysPerYear" class="text-danger"></span>
                        <div class="form-text">Standard allocation for new employees (can be adjusted individually).</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Color" class="form-label">
                            <i class="fas fa-palette"></i> Display Color
                        </label>
                        <select asp-for="Color" class="form-select" onchange="updateColorPreview()">
                            <option value="bg-primary">Primary (Blue)</option>
                            <option value="bg-success">Success (Green)</option>
                            <option value="bg-info">Info (Cyan)</option>
                            <option value="bg-warning">Warning (Yellow)</option>
                            <option value="bg-danger">Danger (Red)</option>
                            <option value="bg-secondary">Secondary (Gray)</option>
                            <option value="bg-dark">Dark (Black)</option>
                        </select>
                        <div class="form-text">
                            Color used in the UI: 
                            <span id="colorPreview" class="badge bg-primary ms-2">Preview</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-cogs"></i> Leave Type Settings
                        </label>
                        
                        <div class="form-check mb-2">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                <i class="fas fa-toggle-on text-success"></i> Active
                            </label>
                            <div class="form-text">Available for employees to select when applying for leave.</div>
                        </div>

                        <div class="form-check mb-2">
                            <input asp-for="IsPaid" type="checkbox" class="form-check-input" checked />
                            <label asp-for="IsPaid" class="form-check-label">
                                <i class="fas fa-money-bill-wave text-success"></i> Paid Leave
                            </label>
                            <div class="form-text">Employee continues to receive salary during this leave.</div>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RequiresApproval" type="checkbox" class="form-check-input" checked />
                            <label asp-for="RequiresApproval" class="form-check-label">
                                <i class="fas fa-user-check text-warning"></i> Requires Manager Approval
                            </label>
                            <div class="form-text">Must be approved by line manager before being granted.</div>
                        </div>
                    </div>

                    <!-- Preview Card -->
                    <div class="card bg-light">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-eye"></i> Preview</h6>
                        </div>
                        <div class="card-body">
                            <div id="leaveTypePreview">
                                <span class="badge bg-primary" id="previewBadge">New Leave Type</span>
                                <div class="mt-2">
                                    <small>
                                        <i class="fas fa-calendar-day"></i> <span id="previewDays">0</span> days/year<br>
                                        <i class="fas fa-money-bill-wave" id="previewPaid"></i> <span id="previewPaidText">Paid</span><br>
                                        <i class="fas fa-user-check" id="previewApproval"></i> <span id="previewApprovalText">Requires Approval</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">
                    <i class="fas fa-align-left"></i> Description
                </label>
                <textarea asp-for="Description" class="form-control" rows="4" 
                          placeholder="Detailed description of this leave type, including any special conditions or requirements..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-text">Optional: Provide additional information about this leave type.</div>
            </div>

            <!-- Action Buttons -->
            <div class="row">
                <div class="col-12">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Create Leave Type
                        </button>
                        <a asp-action="LeaveTypes" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Help Card -->
<div class="card mt-4">
    <div class="card-header bg-info text-white">
        <h6 class="mb-0"><i class="fas fa-info-circle"></i> Leave Type Guidelines</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6><i class="fas fa-lightbulb text-warning"></i> Common Leave Types</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> <strong>Annual Leave:</strong> 21-25 days, Paid, Requires Approval</li>
                    <li><i class="fas fa-check text-success"></i> <strong>Sick Leave:</strong> 10-15 days, Paid, No Approval</li>
                    <li><i class="fas fa-check text-success"></i> <strong>Maternity Leave:</strong> 120 days, Paid, Requires Approval</li>
                    <li><i class="fas fa-check text-success"></i> <strong>Study Leave:</strong> 5 days, Unpaid, Requires Approval</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h6><i class="fas fa-exclamation-triangle text-warning"></i> Important Notes</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-info"></i> Days allocation can be adjusted per employee</li>
                    <li><i class="fas fa-info"></i> Inactive types won't appear in application forms</li>
                    <li><i class="fas fa-info"></i> Changes affect new applications only</li>
                    <li><i class="fas fa-info"></i> Colors help with visual organization</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    function updateColorPreview() {
        const select = document.querySelector('select[name="Color"]');
        const preview = document.getElementById('colorPreview');
        const previewBadge = document.getElementById('previewBadge');
        
        const selectedColor = select.value;
        preview.className = `badge ${selectedColor} ms-2`;
        previewBadge.className = `badge ${selectedColor}`;
    }

    function updatePreview() {
        const name = document.querySelector('input[name="Name"]').value || 'New Leave Type';
        const days = document.querySelector('input[name="DefaultDaysPerYear"]').value || '0';
        const isPaid = document.querySelector('input[name="IsPaid"]').checked;
        const requiresApproval = document.querySelector('input[name="RequiresApproval"]').checked;

        document.getElementById('previewBadge').textContent = name;
        document.getElementById('previewDays').textContent = days;
        
        const paidIcon = document.getElementById('previewPaid');
        const paidText = document.getElementById('previewPaidText');
        if (isPaid) {
            paidIcon.className = 'fas fa-money-bill-wave text-success';
            paidText.textContent = 'Paid';
        } else {
            paidIcon.className = 'fas fa-hand-holding text-warning';
            paidText.textContent = 'Unpaid';
        }
        
        const approvalIcon = document.getElementById('previewApproval');
        const approvalText = document.getElementById('previewApprovalText');
        if (requiresApproval) {
            approvalIcon.className = 'fas fa-user-check text-primary';
            approvalText.textContent = 'Requires Approval';
        } else {
            approvalIcon.className = 'fas fa-user-times text-secondary';
            approvalText.textContent = 'Auto-Approved';
        }
    }

    // Initialize preview
    document.addEventListener('DOMContentLoaded', function() {
        updateColorPreview();
        updatePreview();
        
        // Add event listeners for real-time preview
        document.querySelector('input[name="Name"]').addEventListener('input', updatePreview);
        document.querySelector('input[name="DefaultDaysPerYear"]').addEventListener('input', updatePreview);
        document.querySelector('input[name="IsPaid"]').addEventListener('change', updatePreview);
        document.querySelector('input[name="RequiresApproval"]').addEventListener('change', updatePreview);
    });
</script>

<style>
    .fas {
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
    }
    
    .form-label .text-danger {
        font-weight: bold;
    }
    
    .form-check-label {
        cursor: pointer;
    }
    
    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    
    .card-header h6, .card-header h5 {
        margin-bottom: 0;
    }
    
    #leaveTypePreview .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
</style>